{
  "name": "proompter",
  "private": true,
  "scripts": {
    "prepare": "./scripts/setup && husky install",
    "build": "turbo run build",
    "dev": "turbo run dev storybook --parallel --filter @proomter/demo-next --filter @proompter/adapter-prisma --filter @proompter/server-next --filter @proompter/runner-flowise --filter @proompter/core --filter @proompter/react",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clear-packages": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + ",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3",
    "sqlite3": "5.1.6",
    "turbo": "latest"
  }
}