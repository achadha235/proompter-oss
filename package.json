{
  "name": "proompter",
  "private": true,
  "scripts": {
    "prepare": "./scripts/setup && husky install",
    "build": "turbo run build",
    "dev": "pnpm run dev:next",
    "dev:next": "turbo run dev --filter @proomter/demo-next --filter @proompter/react --filter @proompter/adapter-prisma --filter @proompter/server-next --filter @proompter/runner-flowise",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clear-packages": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + ",
    "test": "echo 'Skip'"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3",
    "turbo": "latest"
  }
}