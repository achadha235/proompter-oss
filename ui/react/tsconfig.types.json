{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "declaration": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "outFile": "./build/index.d.ts",
        "allowJs": true,
        "paths": {
            "@/*": [
                "./src/*",
                "./*"
            ]
        }
    },
    "include": [
        "./build/index.js",
        "./node_modules/typescript/lib/lib.dom.d.ts"
    ]
}