{
    "$schema": "https://turbo.build/schema.json",
    "extends": [
        "//"
    ],
    "globalEnv": [
        "DATABASE_TYPE",
        "DATABASE_PATH",
        "NODE_ENV",
        "NEXTAUTH_SECRET",
        "GITHUB_AUTH_CLIENT_ID",
        "GITHUB_AUTH_CLIENT_SECRET"
    ],
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "build/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "lint": {},
        "test": {
            "persistent": false,
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "outputs": []
        },
        "storybook": {
            "persistent": true,
            "cache": false,
            "outputs": []
        },
        "dev:js": {
            "persistent": true,
            "cache": false,
            "outputs": []
        },
        "dev:css": {
            "persistent": true,
            "cache": false,
            "outputs": []
        }
    }
}